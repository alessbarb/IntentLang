{
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@site/*": [
        "./*"
      ]
    },
    "types": [
      "@docusaurus/module-type-aliases",
      "@docusaurus/theme-classic"
    ],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "docs/**/*.mdx"
  ]
}